.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper-image {
  height: 100%;
  width: 100%;
}
.slide-image{
   height: 100%;
  width: 100%;
}

.box{
  width: 100%;
  background-color: #eee;
  display: flex;
  flex-direction: row;
}

.box-item{
    display: flex;
    flex-direction: column;
    width: 25%;
    margin: 15rpx 0;
}

.box-item-img{
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    margin: 0 auto;
}

.box-item-text{
    margin: 0 auto;
    font-size: 30rpx;
}
